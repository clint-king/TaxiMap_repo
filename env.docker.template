# Docker Environment Variables Template
# Copy this file to .env.docker and fill in your actual values

NODE_ENV=development
PORT=3000

# Database Configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=teksimap_db
MYSQL_USER=teksimap_user
MYSQL_PASSWORD=teksimap_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=24h

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@teksimap.co.za

# Frontend URL
FRONTEND_URL=http://localhost:3000
