# Production Environment Variables Template for AWS EC2 with RDS
# Copy this file to .env.production and fill in your actual values

NODE_ENV=production
PORT=3000

# AWS RDS Database Configuration
MYSQL_HOST=your-rds-endpoint.region.rds.amazonaws.com
MYSQL_PORT=3306
MYSQL_DATABASE=teksimap_prod_db
MYSQL_USER=teksimap_prod_user
MYSQL_PASSWORD=your_strong_production_password

# JWT Configuration
JWT_SECRET=your_very_strong_jwt_secret_for_production
JWT_EXPIRES_IN=24h

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_production_email@gmail.com
EMAIL_PASSWORD=your_production_app_password
EMAIL_FROM=noreply@teksimap.co.za

# Frontend URL
FRONTEND_URL=https://www.teksimap.co.za

# AWS Configuration (if using AWS services)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# SSL Configuration (if using Let's Encrypt or custom SSL)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
